<div class="discussion">
  <h1><%= @discussion.title %></h1>
  <h3 class="discussion-body"><%= @discussion.body %></h3>
</div>

<h2>Add New Comment</h2>
<%= form_for [@discussion, @comment] do |f| %>
<div>
  <%= f.label :body %>
  <%= f.text_field :body %>
</div>
<%= f.submit %>
<% end %>
<hr>

<h3>Comments</h3>
<% @comment.errors.full_messages.join(", ") %>
<% @discussion.comments.each do |comment| %>
  <p><%= comment.body %></body></p>
  <p>Created at: <%= format_time(comment.created_at) %></p>
  <p>Commented by: <%= comment.user.first_name if comment.user %></p>
  <% if can? :manage, @comments %>
    <%= link_to "Delete Comment", discussion_comment_path(@discussion, comment), method: :delete, data:{confirm: "Are you sure you want to permanently remove this comment?"} %>
  <% end %>
  <hr>
<% end %>
